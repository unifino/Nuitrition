// -- =====================================================================================

    const myCrypt = async ( pass: string ) => {

        try {
            const saltRounds = 10
            const salt = await bcryptjs.genSalt( saltRounds )
            const hash = await bcryptjs.hash( pass, salt )
            return hash
        } catch (err) {
            console.log("err: " + err);
            return 0
        }

    }